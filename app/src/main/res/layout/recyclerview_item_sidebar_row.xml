<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/view_base_layout_surface"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/general"
	android:paddingBottom="@dimen/general"
	android:padding="@dimen/general"
	android:clickable="true"
	android:focusable="true">
	<ImageView
		android:id="@+id/iv"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:src="@color/colorPrimary"/>
	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/general"
		android:layout_marginLeft="@dimen/general"
		android:layout_gravity="center_vertical"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:textStyle="normal"
		android:textColor="#767676"
		tools:text="Mi taller"/>
</LinearLayout>